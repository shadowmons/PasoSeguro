<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.Aviso"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.Registro"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.Usuarios"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.ListadoPatrones"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.Gestionar"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.VerCiclos"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.tesisuc.dv.pasoseguro.Activities.Configuracion"
            android:screenOrientation="portrait"></activity>


        <service android:name=".Services.Respuesta"></service>
    </application>

</manifest>